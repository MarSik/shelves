<section class="purchase">
    <h2>Purchase</h2>

    <dl>
        <dt>Source</dt>
        <dd>{{model.source.name}}</dd>
    </dl>

    <dl>
        <dt>Purchase date</dt>
        <dd>{{model.date}}</dd>
    </dl>

    <table>
        <thead>
        <tr>
            <th>Type</th>
            <th colspan="4">Box</th>
        </tr>
        <tr>
            <th>SKU</th>
            <th>Cnt.</th>
            <th>Price</th>
            <th>w/ Vat</th>
            <th>Vat %</th>
        </tr>
        </thead>
        {{#each purchase in model.items}}
        <tbody>
        <tr>
            <td>
                {{#link-to 'types.show' purchase.type}}{{purchase.type.fullName}}{{/link-to}}
            </td>
            <td colspan="4">
                {{purchase-delivery sortedBoxes=sortedBoxes purchase=purchase action='delivered' location=location}}
            </td>
        </tr>
        <tr>
            <td class="sku">
                {{purchase.sku}}
            </td>
            <td class="count">
                {{purchase.count}}
            </td>
            <td class="price">
                {{purchase.priceWithoutVat}}
            </td>
            <td class="vat-included">
                {{purchase.priceWithVat}}
            </td>
            <td class="vat">
                {{purchase.vat}}
            </td>
        </tr>
        </tbody>
        {{/each}}
    </table>
</section>

{{outlet}}
