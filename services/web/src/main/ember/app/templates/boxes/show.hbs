<section class="columns large-8">
    {{partial '_itemheader'}}

<table style="width: 100%;">
    <thead>
    <tr>
        <th>&nbsp;</th>
        <th>Name {{sort-link action='sortBy' field='type.name'}}</th>
        <th>Vendor {{sort-link action='sortBy' field='type.vendor'}}</th>
        <th>Footprint {{sort-link action='sortBy' field='type.footprint'}}</th>
        <th>Count {{sort-link action='sortBy' field='count'}}</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
{{#each lot in sortedLots}}
    <tbody>
    <tr {{action 'showQr' 'lots' lot on='mouseEnter'}}>
        <td>
            {{#if lot.canBeMoved}}
                {{#draggable-item content=lot.id}}{{fa-icon 'hand-o-up'}}{{/draggable-item}}
            {{else}}
                &nbsp;
            {{/if}}
        </td>
        <td>{{#link-to 'types.show' lot.type}}{{lot.type.name}}{{/link-to}}</td>
        <td>{{lot.type.vendor}}</td>
        <td>{{#link-to 'footprints.show' lot.type.footprint}}{{lot.type.footprint.name}}{{/link-to}}</td>
        <td>{{#link-to 'transactions.show' lot.purchase.transaction}}{{lot.count}}{{/link-to}}</td>
        <td>{{#link-to 'lots.show' lot}}{{fa-icon 'history'}}{{/link-to}}</td>
    </tr>
    <tr>
        <td colspan="6">{{lot.type.summary}}</td>
    </tr>
    </tbody>
{{/each}}
</table>
</section>

<nav class="actions">
    <button class='qr-button' {{action 'addSticker' model}}>{{fa-icon 'qrcode'}} Add to sticker list</button>
    {{#if model.canBeDeleted}}{{#confirm-button action='deleteEntity' param=model class='alert button'}}{{fa-icon 'times'}} Delete{{/confirm-button}}{{/if}}
</nav>