{{partial '_itemheader'}}

<h3>Unit symbol</h3>

{{#click-to-edit content=model field='content.symbol'}}{{model.symbol}}{{/click-to-edit}}

<h3>Enabled ISO prefixes</h3>

<ul class="prefixes small-block-grid-2 large-block-grid-6">
    {{#each prefix in sortedPrefixes itemController='properties/unit'}}
    <li>
        {{#if prefix.isEnabled}}
        <button {{action 'disablePrefix' prefix.model}} class="button tiny alert">{{prefix.id}} [{{prefix.prefix}}] &ndash; 10<sup>{{prefix.power10}}</sup></button>
        {{else}}
        <button {{action 'enablePrefix' prefix.model}} class="button tiny secondary">{{prefix.id}} [{{prefix.prefix}}] &ndash; 10<sup>{{prefix.power10}}</sup></button>
        {{/if}}
    </li>
    {{/each}}
</ul>

{{outlet}}
