<div class="row">
<section class="title columns small-12">
<h2>{{#click-to-edit content=model field='content.name' placeholder='place for name, title or id'}}{{model.name}}{{/click-to-edit}}</h2>
</section>
</div>

<div class="row">
    <section class="description columns small-12 large-6">
        <h3>Summary</h3>
        <p>{{#click-to-editarea content=model field='content.summary' placeholder='place for short summary'}}{{model.summary}}{{/click-to-editarea}}</p>

        <h3>Description</h3>

{{#click-to-editarea content=model field='content.description' placeholder='place for the full description'}}{{model.description}}{{/click-to-editarea}}
    </section>
    <section class="attachments columns small-12 large-6">

<h3>Attachments</h3>

<table>
    {{#each doc in model.describedBy itemController='document'}}
    <tr>
        <td {{bind-attr title=doc.contentType}}>{{fa-icon doc.icon}} {{#view 'entity-link' entity=doc resource='download' models='documents'}}{{doc.name}}{{/view}}</td>
        <td>{{doc.created}}</td>
        <td style="text-align: right;">{{#confirm-button action='deleteDocument' param=doc class='remove button alert'}}{{fa-icon 'times'}} Delete{{/confirm-button}}</td>
    </tr>
    {{/each}}
</table>

{{save-from-web action='download' entity=model}}
{{upload-attachments entity=model uploadFinished='uploadFinished'}}
{{#webcam-module uploadFinished='uploadFinished' entity=model}}
        <h3>Upload picture from webcam</h3>

        <p>Press pause to freeze a picure and then upload to send it to server. Simply un-pause and try again if you do not like the paused image. Once you are done, click the stop button to exit.</p>
{{/webcam-module}}
</section>
</div>

