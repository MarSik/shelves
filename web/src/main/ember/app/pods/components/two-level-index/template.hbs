
  <h3>
    {{#link-to target model}}{{model.name}} ({{model.count}}){{/link-to}}
    <span class="hover-actions">
      <button {{action 'add' model}}>{{fa-icon 'plus'}}</button>
    </span>
  </h3>

  <ul>
    {{#each sorted as |i|}}
    <li>
      {{#link-to target i}}{{i.name}} ({{i.count}}){{/link-to}}
      <span class="hover-actions">
        <button {{action 'add' i}}>{{fa-icon 'plus'}}</button>
      </span>
    </li>
    {{/each}}
  </ul>