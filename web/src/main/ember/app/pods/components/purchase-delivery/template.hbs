{{#if isDelivering}}
<div class="row collapse">
    <div class="small-1 columns">
        {{input value=(mut count)}}
    </div>
    <div class="small-10 columns">
        {{ember-selectize
        content=sortedBoxes
        optionValuePath="content.id"
        optionLabelPath="content.fullName"
        selection=location
        sort="content.fullName"
        maxItems=1
        placeholder="Select a location" }}
    </div>
    <div class="small-1 columns">
        <button {{action 'delivered'}} class='postfix' disabled={{buttonDisabled}}>{{fa-icon 'truck'}}</button>
    </div>
</div>
{{/if}}
{{#if canDeliver}}
<button class="single-line" {{action 'startDelivery'}}>{{fa-icon 'truck'}} record delivery</button>
{{/if}}
{{#if fullyDelivered}}
{{fa-icon 'check-square-o'}} {{purchase.delivered}}
{{/if}}

