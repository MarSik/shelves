<h2>Lot {{model.id}}</h2>

<dl>
  <dt>Type</dt>
  <dd>{{fa-icon model.type.icon}} {{#link-to 'types.show' model.type}}{{model.type.fullName}}{{/link-to}}</dd>
</dl>

<dl>
    <dt>Count</dt>
    <dd>{{model.count}}</dd>
</dl>

<dl>
    <dt>Action</dt>
    <dd>{{model.status}}</dd>
</dl>

<dl>
    <dt>Date</dt>
    <dd>{{model.created}}</dd>
</dl>

<h2>Chain of changes</h2>
<table>
{{lot-history model=model.history showHistory=true}}
</table>

{{#if model.parents}}
<h2>Mixed from</h2>

<table>
  <tr>
    <th>%</th>
    <th>history</th>
    <th>purchased on</th>
    <th>source</th>
    <th>transaction</th>
  </tr>
{{#each model.ancestry key="@index" as |ancestor|}}
{{lot-ancestor-detail ancestor=ancestor}}
{{/each}}
</table>
{{/if}}